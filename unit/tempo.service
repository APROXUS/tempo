[Unit]
Description=Discord bot, Tempo, as a service...
After=network-online.target

[Service]
User=%u
TimeoutStartSec=0
Type=simple
KillMode=process
WorkingDirectory=%h/tempo/prod
ExecStart=/usr/bin/dotnet %h/tempo/prod/Tempo.dll
Restart=always
RestartSec=10
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
